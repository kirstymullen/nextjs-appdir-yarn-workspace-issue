{
  "compilerOptions": {
      "incremental": false,
      "target": "es5",
      "module": "ES2020",
      "lib": [ 
          "dom",
          "ES2020"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": false,
      "jsx": "react",
      "outDir": "./dist/",
      "declaration": true,
      "useUnknownInCatchVariables": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
